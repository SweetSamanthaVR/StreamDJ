{
  "name": "streamdj",
  "version": "1.0.0",
  "description": "Local streaming toolkit with music library scanning, FFmpeg encoding, and web UI control",
  "main": "src/player.js",
  "scripts": {
    "test": "node --test test/auth.test.js",
    "build": "tsc",
    "build:webui": "tsc -p tsconfig.json",
    "prestart:webui": "npm run build:webui",
    "start": "node src/server.js",
    "start:player": "node src/player.js",
    "start:webui": "node dist/webui.js",
    "dev:webui": "ts-node webui.ts",
    "lint": "eslint src/*.js src/lib/**/*.js src/server/**/*.js src/player/**/*.js",
    "lint:fix": "eslint src/*.js src/lib/**/*.js src/server/**/*.js src/player/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md,ts}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,ts}\""
  },
  "keywords": [
    "streaming",
    "audio",
    "ffmpeg",
    "rtmp",
    "dj",
    "music",
    "overlay"
  ],
  "author": "SweetSamanthaVR",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "chokidar": "^4.0.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^11.9.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.2",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.8.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
